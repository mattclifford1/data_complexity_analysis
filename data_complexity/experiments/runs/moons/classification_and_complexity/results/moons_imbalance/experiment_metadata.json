{
  "experiment_name": "moons_imbalance",
  "dataset": {
    "type": "Moons",
    "fixed_params": {
      "num_samples": 400,
      "train_size": 0.5,
      "moons_noise": 0.1,
      "equal_test": true
    }
  },
  "vary_parameter": {
    "name": "minority_reduce_scaler",
    "values": [
      "1",
      "2",
      "4",
      "8",
      "16"
    ],
    "label_format": "imbalance={value}x"
  },
  "ml_models": [
    {
      "name": "LogisticRegression",
      "class": "LogisticRegressionModel",
      "parameters": {
        "random_state": 42,
        "scale_features": true,
        "max_iter": 1000
      }
    },
    {
      "name": "SVM-RBF",
      "class": "SVMModel",
      "parameters": {
        "random_state": 42,
        "scale_features": true,
        "kernel": "rbf",
        "C": 1.0
      }
    },
    {
      "name": "SVM-LINEAR",
      "class": "SVMModel",
      "parameters": {
        "random_state": 42,
        "scale_features": true,
        "kernel": "linear",
        "C": 1.0
      }
    },
    {
      "name": "RandomForest",
      "class": "RandomForestModel",
      "parameters": {
        "random_state": 42,
        "scale_features": false,
        "n_estimators": 50,
        "max_depth": 5
      }
    },
    {
      "name": "KNN-5",
      "class": "KNNModel",
      "parameters": {
        "random_state": 42,
        "scale_features": true,
        "n_neighbors": 5
      }
    }
  ],
  "ml_metrics": [
    "accuracy",
    "f1",
    "precision",
    "recall",
    "balanced_accuracy"
  ],
  "cv_folds": 5,
  "correlation_target": "best_accuracy",
  "plots": [
    "LINE_PLOT_TRAIN",
    "LINE_PLOT_TEST",
    "LINE_PLOT_MODELS_TRAIN",
    "LINE_PLOT_MODELS_TEST",
    "LINE_PLOT_COMPLEXITY_TRAIN",
    "LINE_PLOT_COMPLEXITY_TEST",
    "LINE_PLOT_MODELS_COMBINED",
    "LINE_PLOT_COMPLEXITY_COMBINED",
    "DATASETS_OVERVIEW"
  ],
  "run_mode": "both"
}